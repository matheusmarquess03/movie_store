<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Inscrever-se</h3>
                </div>
                <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <fieldset>
                        <div class="form-group">
                            <%= f.email_field :email, class: 'form-control', placeholder: 'E-mail', autofocus: true, autocomplete: "email" %>
                        </div>
                        <div class="form-group">
                            <%= f.password_field :password, class: 'form-control', placeholder: 'Senha de 6 caracteres ou mais', autocomplete: "off" %>
                        </div>
                        <div class="form-group">
                            <%= f.password_field :password, class: 'form-control', placeholder: 'Confirme a senha', autocomplete: "off" %>
                        </div>
                        <% if devise_mapping.rememberable? -%>
                        <div class="checkbox">
                            <label>
                                <%= f.check_box :remember_me %> Lembrar senha
                            </label>
                        </div>
                        <% end -%>
                        <%= f.submit "Cadastrar", class: 'btn btn-lg btn btn-primary btn-block' %>
                        <br>
                        <%= link_to "Entrar", new_user_session_path %>
                    </fieldset>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>