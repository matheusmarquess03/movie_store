<%= form_for @movie, html: { multipart: true } do |form| %>
<% if movie.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
    <ul>
        <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="panel-body">
            <div class="col-lg-6">
                <%= form.label :name, 'Nome'%>
                <%= form.text_field :name, class: 'form-control', required: true %><br>
            </div>

            <div class="col-lg-6">
                <%= form.label :release_year, 'Ano de Lançamento' %>
                <%= form.number_field :release_year, class: 'form-control', required: true %><br>
            </div>

            <div class="col-lg-12">
                <%= form.label :synopsis, 'Sinopse' %>
                <%= form.text_area :synopsis, class: 'form-control', required: true %><br>
            </div>

            <div class="col-lg-6">
                <%= form.label :director, 'Diretor' %>
                <%= form.text_field :director, class: 'form-control', required: true %><br>
            </div>

            <div class="col-lg-6">
                <%= form.label :rating, 'Avaliação' %>
                <%= form.number_field :rating, class: 'form-control', required: true %><br>
            </div>

            <div class="col-lg-6">
                <%= form.label :image, 'Imagem' %>
                <%= form.file_field :image %><br>
            </div>
        </div>
        <button type="submit" class="btn btn-primary ">Salvar</button>
        <%= link_to 'Voltar', movies_path,  class: "btn btn-primary" %>
    </div>
</div>
<% end %>